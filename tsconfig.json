{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
